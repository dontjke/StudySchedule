<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#191919">

    <ImageView
        android:id="@+id/lessonNameImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/baseline_lightbulb_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lessonNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/history"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/lessonNameImageView"
        app:layout_constraintTop_toTopOf="@+id/lessonNameImageView" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/time"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/lessonNameImageView"
        app:layout_constraintStart_toEndOf="@+id/lessonNameImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>